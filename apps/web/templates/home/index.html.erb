
<div class="jumbotron">
  <div class="container">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-1">

      <div class="media">
        <div class="media-body">
          <h1 class="media-heading">
            <%= sushi[:name][:japanese] %>
            <small><%= sushi[:name][:english] %></small>
          </h1>

          <ul class="list-inline">
            <li>
              <%= sushi[:category] %>
            </li>
            <li>
              <%= sushi[:peak][:season] %>
            </li>
          </ul>
        </div>

        <div class="media-right">
          <span class="kanji text-muted">
            <%= sushi[:name][:kanji] %>
          </span>
        </div>
      </div>

      <h4>The Intro</h4>
      <p>
        <%= sushi[:introduction] %>
      </p>

      <table class="table">
        <tr>
          <th>Conservation Status</th>
          <td></td>
        </tr>
        <tr>
          <th>Season</th>
          <td><%= sushi[:peak][:season] %></td>
        </tr>
        <tr>
          <th>Flavor</th>
          <td>
            <span class="label label-default">White</span>
            <span class="label label-default">Succulent</span>
          </td>
        </tr>
        <tr>
          <th>Pairings</th>
          <td>
            Often times, its paired with
            <span class="label label-default">Jalapaneos</span>.
          </td>
        </r>
      </table>

      <h4>The Tane</h4>
      <p>
        <%= sushi[:tane][:description] %>
      </p>

      <h4>Preparation and Handling</h4>
      <p>
        <%= sushi[:preparation][:description] %>
      </p>
      <iframe width="560" height="315" src="<%= sushi[:preparation][:videos][0][:url] %>" frameborder="0" allowfullscreen></iframe>

      <div class="row">
        <div class="col-md-12">

          <h3>Reviews</h3>
          <h4>And where they were eaten</h4>

        </div>
      </div>


      <h3>The Fish</h3>
      <%= image sushi[:fish][:image_url], class: "img-responsive img-rounded" %>
      <p>
        <%= sushi[:fish][:description] %>
      </p>


      <h4>Alternate Names</h4>
      <dl class="dl-horizontal">
        <% sushi[:name][:alternates].each do |alt_name| %>
          <dt><%= alt_name[0] %></dt>
          <dd><%= alt_name[1] %></dd>
        <% end %>
      </dl>

      <h4>Often confused with</h4>
      <ul class="list-inline">
        <li><%= link_to "Aji", "#" %></li>
        <li><%= link_to "Saba", "#" %></li>
      </ul>

      <h4>Graph of Commercial capture</h3>


    </div>

    <div class="col-md-3 col-md-offset-1">
      <table class="table">
        <tr>
          <th>Body Length</th>
          <td>
            <ul class="list-unstyled">
              <li>
                <small class="text-muted">(min)</small>
                <%= sushi[:fish][:body_length][:min] %>
                <%= sushi[:fish][:body_length][:units] if sushi[:fish][:body_length][:min] %>
              </li>
              <li>
                <small class="text-muted">(max)</small>
                <%= sushi[:fish][:body_length][:max] %>
                <%= sushi[:fish][:body_length][:units] if sushi[:fish][:body_length][:max] %>
              </li>
            </ul>

          </td>
        </tr>
        <tr>
          <th>Body Mass</th>
          <td>
            <ul class="list-unstyled">
              <li>
                <small class="text-muted">(min)</small>
                <%= sushi[:fish][:body_mass][:min] %>
                <%= sushi[:fish][:body_mass][:units] if sushi[:fish][:body_mass][:min] %>
              </li>
              <li>
                <small class="text-muted">(max)</small>
                <%= sushi[:fish][:body_mass][:max] %>
                <%= sushi[:fish][:body_mass][:units] if sushi[:fish][:body_mass][:max] %>
              </li>
            </ul>
          </td>
        </tr>

        <tr>
          <th>Location</th>
          <td>Coast of Japan, East and South China Seas</td>
        </tr>
        <tr>
          <th>Harvesting Method</th>
          <td></td>
        </tr>
        <tr>
          <td colspan="2">
            <h5>Scientific Classification</h5>
            <p>
              <%= sushi[:name][:scientific] %>
            </p>
          </td>
        </tr>
        <tr>
          <td></td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>

</div>
